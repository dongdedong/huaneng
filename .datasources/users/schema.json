
{
  "name": "users",
  "title": "用户管理",
  "schemas": [
    {
      "name": "username",
      "title": "用户名",
      "type": "String",
      "required": true,
      "unique": true
    },
    {
      "name": "password",
      "title": "密码",
      "type": "String",
      "required": true
    },
    {
      "name": "name",
      "title": "姓名",
      "type": "String",
      "required": true
    },
    {
      "name": "phone",
      "title": "手机号",
      "type": "String",
      "pattern": "^1[3-9]\\d{9}$"
    },
    {
      "name": "department",
      "title": "所属部门",
      "type": "String",
      "enum": ["规划部", "豫北项目开发部", "灵宝项目开发部", "南阳项目开发部", "省直项目开发部", "郑州项目开发部", "开封项目开发部", "许昌项目开发部", "漯河项目开发部", "商丘项目开发部", "周口项目开发部", "系统管理员"]
    },
    {
      "name": "email",
      "title": "邮箱",
      "type": "Email"
    },
    {
      "name": "role",
      "title": "角色",
      "type": "String",
      "enum": ["admin", "user", "manager"],
      "default": "user"
    },
    {
      "name": "status",
      "title": "状态",
      "type": "String",
      "enum": ["active", "inactive", "locked"],
      "default": "active"
    },
    {
      "name": "last_login",
      "title": "最后登录时间",
      "type": "DateTime",
      "format": "timestamp-ms"
    },
    {
      "name": "login_count",
      "title": "登录次数",
      "type": "Number",
      "default": 0
    }
  ]
}
  